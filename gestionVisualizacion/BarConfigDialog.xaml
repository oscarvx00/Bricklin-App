<mah:MetroWindow x:Class="Bricklin_App.gestionVisualizacion.BarConfigDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Bricklin_App.gestionVisualizacion"
        xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
        mc:Ignorable="d"
        Title="BarConfigDialog" Height="450" Width="800">
    <StackPanel>
        <Border BorderBrush="{DynamicResource MahApps.Brushes.Accent}"
                DockPanel.Dock="Top"
                BorderThickness="2"
                Margin="5"
                Height="auto">
            <DockPanel LastChildFill="False">
                <TextBlock
                    DockPanel.Dock="Top"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Margin="20"
                    Text="Customización grafico de barras"
                    Height="auto"
                    Width="auto"
                    FontSize="18"
                    Foreground="{DynamicResource MahApps.Brushes.Accent}"/>
            </DockPanel>
        </Border>
    </StackPanel>
</mah:MetroWindow>
